{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <article>
        <br>
        <h2>{{ tricks.name }}</h2>
        <hr>
        <div class="metadata">Posted the {{ tricks.createdAt | date('d/m/y') }} at {{ tricks.createdAt | date('H:i') }} by
        </div>
        <hr>
        <div class="content">
            {{ tricks.description }}
        </div>
        <hr>
    </article>
</div>

{% if is_granted('ROLE_USER') %}
    <div class="container">

            {{ form_start(comment_form) }}

            <div class="form-group">
                <label class="col-form-label mt-4" for="name">Leave us your comment</label>
                {{ form_widget(comment_form.message) }}
            </div>
            <br>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('new_comment') }}">
            <button type="submit" class="btn btn-primary">Submit</button>

            {{ form_end(comment_form) }}
        <hr>
    </div>
{% endif %}

<div class="container">
    {%  if (comments == null)  %}
        <h4>No comments at this time... Be first!</h4>
    {% else %}
    {% for comment in comments %}
            <p class="blog-post-meta">{{ comment.createdAt | date('d/m/y') }} a {{ comment.createdAt | date('H:i') }}</a></p>

            <p>{{ comment.message }}</p>

    {% endfor %}
    {% endif %}

    <hr>
</div>



{% endblock %}

