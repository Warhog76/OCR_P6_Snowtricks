{% extends 'base.html.twig' %}

{% block body %}
    {% include 'macros/alerts.html.twig' %}

    <!-- Background image -->
    <div id="intro" class="bg-image">
        <img src="{{ asset('default_images/home.jpeg') }}" class="img-fluid" alt="...">
    </div>
    <div class="bg-text bg-dark">
        <div class="container d-flex align-items-center justify-content-center text-center h-100">
            <div class="text-white">
                <h1 class="text-light mb-2 mt-5">Snowtricks</h1>
                <p class="lead  text-light mb-5">Nothing is impossible to whoever tries!</p>
            </div>
        </div>
    </div>
    <br>

    <!-- Tricks section -->
    <div class="album py-5 bg-light">
        <section id="tricks">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for trick in tricks %}
                        <div class="col">
                            <div class="card shadow-sm">
                                {% if trick.firstImage %}
                                    <img src="{{ asset(trick.firstImage.path) }}" alt="">
                                {% else %}
                                    <img src="{{ asset('default_images/tricksHome.jpg') }}" alt="">
                                {% endif %}
                                <div class="card-body">
                                    <h3><a href="{{ path('show', {slug: trick.slug}) }}" class="link-dark ">{{ trick.name }}</a></h3>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            {% if is_granted('ROLE_USER') %}
                                                <a href="{{ path('tricks_modify', {slug: trick.slug}) }}" class="btn btn-success">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                                    </svg>
                                                </a>

                                                <a href="{{ path('tricks_delete', {id: trick.id}) }}" class="btn btn-danger">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                                                    </svg>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}