{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex flex-column min-vh-100">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="col-md-6 offset-md-3">
            <div class="text-center" >
                <form action="{{ path('login') }}" method="post">
                    <img class="mb-4" src="{{ asset('default_images/admin.png') }}" alt="" width="200" height="200">
                    <h1 class="h3 mb-3 fw-normal">Login</h1>
                    <br>
                    <div class="mb-3">
                        <label for="username">Email address</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="mb-3">
                        <label for="password">Password </label>
                        <input type="password" class="form-control" id="password" name="_password">
                        <br>
                        <a href="{{ path('app_forgot_password_request') }}" class="nav-link">Forget password?</a>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block title %}

{% endblock %}

