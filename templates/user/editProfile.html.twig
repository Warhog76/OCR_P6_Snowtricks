{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex flex-column min-vh-100">
    <br><br>
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                   <img src="{{ asset('/default_images/avatar.png') }}" alt="" height="150px" width="150px">
                                <div class="mt-3">
                                    <h4>{{ user.username }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">

                            {{ form_start(user_form) }}
                            <div class="form-group">
                                <label class="col-form-label mt-4" for="name">Username</label>
                                {{ form_widget(user_form.username) }}
                            </div>
                            <div class="form-group">
                                <label class="form-label mt-4" for="avatar">Avatar</label>
                                {{ form_widget(user_form.avatar) }}
                            </div>
                            <br>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('mod-profile') }}">
                            <button type="submit" class="btn btn-primary">Submit</button>

                            {{ form_end(user_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
